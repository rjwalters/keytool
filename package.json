{
  "name": "keytool",
  "version": "0.0.1",
  "type": "module",
  "description": "Basic key shares tool",
  "main": "electron/main.cjs",
  "author": {
    "name": "Robb Walters",
    "url": "https://github.com/rjwalters"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rjwalters/keytool.git"
  },
  "scripts": {
    "start": "NODE_ENV=production concurrently \"vite build\" \"wait-on build/index.html && electron .",
    "electron-dev": "NODE_ENV=development concurrently \"vite dev\" \"wait-on http://localhost:5173 && electron .\"",
    "make": "npm run build && electron-builder build --mac --win --linux",
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint .",
    "ncu": "npx npm-check-updates -i"
  },
  "devDependencies": {
    "@sveltejs/adapter-static": "^3.0.6",
    "@sveltejs/kit": "^2.8.1",
    "@sveltejs/vite-plugin-svelte": "^4.0.1",
    "@tsconfig/svelte": "^5.0.4",
    "@types/eslint": "^9.6.1",
    "@types/node": "^22.9.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "electron-builder-squirrel-windows": "^25.1.8",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.46.0",
    "globals": "^15.12.0",
    "prettier": "^3.3.3",
    "prettier-plugin-svelte": "^3.2.8",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "svelte": "^5.2.0",
    "svelte-check": "^4.0.8",
    "tailwindcss": "^3.4.15",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.14.0",
    "vite": "^5.4.11",
    "wait-on": "^8.0.1"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.1",
    "ethers": "^6.13.4"
  },
  "build": {
    "appId": "com.rjwalters.keytool",
    "productName": "KeyTool",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "electron/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
