{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "outDir": "../build",
    "rootDir": "./",
    "strict": true,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./types", "../node_modules/@types"]
  },
  "include": ["**/*"]
}
